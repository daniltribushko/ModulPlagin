<?xml version="1.0" encoding="UTF-8" ?>
<XMLDB PATH="mod/longread/db" VERSION="2025011200" COMMENT="XMLDB file for Longread module">
    <TABLES>
        <TABLE NAME="longread" COMMENT="Table for storing longread instances">
            <FIELDS>
                <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true" COMMENT="Primary key"/>
                <FIELD NAME="name" TYPE="char" LENGTH="255" NOTNULL="true" COMMENT="Name of the longread"/>
                <FIELD NAME="content" TYPE="longtext" NOTNULL="false" COMMENT="Longread content"/>
                <FIELD NAME="timecreated" TYPE="int" LENGTH="10" NOTNULL="true" COMMENT="Creation time"/>
                <FIELD NAME="timemodified" TYPE="int" LENGTH="10" NOTNULL="true" COMMENT="Last modified time"/>
            </FIELDS>
            <KEYS>
                <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
            </KEYS>
        </TABLE>
    </TABLES>
</XMLDB>